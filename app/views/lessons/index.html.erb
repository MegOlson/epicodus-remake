<h1>Lessons</h1>

<% if @lessons %>
  <ul>
    <% @lessons.each do |lesson| %>
      <li> <%= link_to lesson.name, lesson_path(lesson) %> | <%= link_to "Edit", edit_lesson_path(lesson) %> </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no lessons logged.</p>
<% end %>

<p> <%= link_to "New Lesson", new_lesson_path %> </p>

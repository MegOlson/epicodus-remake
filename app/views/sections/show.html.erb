<h1> <%= @section.name %> </h1>

<ul>
  <% @section.lessons.each do |lesson| %>
    <li> <%= link_to lesson.name, section_lesson_path(@section, lesson) %> </li>
  <% end %>
</ul>

<%= link_to "Edit", edit_section_path(@section) %>
<p><%= link_to "Delete", section_path(@section),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<p> <%= link_to "Add Lesson", new_section_lesson_path(@section) %> </p>
